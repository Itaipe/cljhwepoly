extends examtemplate

block content
    section.question0
      p
            strong Question 2/2 (HTTP) :
            br
            | Que contient l'URI dans une requête HTTP ?
    section
      form(action='examinationResult')
        label(for='protocole')
          input#protocole(type='checkbox', name='answer', value='1')
          | Le protocole
        br
        label(for='hote')
          input#hote(type='checkbox', name='answer', value='2')
          | L'hôte
        br
        label(for='mac')
          input#mac(type='checkbox', name='answer', value='3')
          | L'adresse MAC
        br
        label(for='port')
          input#port(type='checkbox', name='answer', value='4')
          | Le port
        br
        input.button(type='submit', value='Valider')
