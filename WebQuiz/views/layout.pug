doctype html
html(lang='fr')
  head
    title= title
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    div#top
      header#header
        a(href='/')
          img#logo(src='/images/logo.png', alt='WebQuiz Logo')
      if nav=="true"
        nav#nav
          ul
            if title=="WebQuiz : Accueil"
              li.colored_nav
                a(href='/') Accueil
            else
              li
                a(href='/') Accueil
            if title=="WebQuiz : Tableau de bord"
              li.colored_nav
                a(href='dashboard') Tableau de bord
            else
              li
                a(href='dashboard') Tableau de bord
            if title=="WebQuiz : Instructions"
              li.colored_nav
                a(href='instructions') Instructions
            else
              li
                a(href='instructions') Instructions
    main#main
      block content
      footer#footer
